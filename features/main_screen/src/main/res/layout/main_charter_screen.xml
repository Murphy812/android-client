<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
            android:id="@+id/bodySpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:spinnerMode="dropdown"
            android:text="TODO: тело"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/qrDataView"
            app:layout_constraintEnd_toStartOf="@+id/qrDataView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/qrDataView"
            tools:text="Аватар " />


    <TextView
            android:id="@+id/textPowerBonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#000"
            android:textSize="25dp"
            app:layout_constraintEnd_toStartOf="@+id/textHp"
            app:layout_constraintStart_toEndOf="@+id/textMana"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="99⚔" />

    <TextView
            android:id="@+id/textHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="#f00"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15♡" />

    <TextView
            android:id="@+id/textMana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#00f"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15✡" />



    <ImageView
            android:id="@+id/qrDataView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            android:translationZ="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textHp"
            tools:srcCompat="@drawable/qr_code" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activeAbilityList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qrDataView" />


</androidx.constraintlayout.widget.ConstraintLayout>